@model List<AppRole>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	int count = 0;
}

<h1>Role Listesi</h1>
@if (Model.Count > 0)
{
	<table class="table table-bordered">
		<tr>
			<th>#</th>
			<th>Role Adı</th>
			<th>Rolü Sil</th>
			<th>Rolü Güncelle</th>
		</tr>

		@foreach (var item in Model)
		{
			count++;
			<tr>
				<td>@count</td>
				<td>@item.Name</td>
				<td><a href="/Admin/Role/DeleteRole/@item.Id" class="btn btn-outline-danger">Rolü Sil</a></td>
				<td><a href="/Admin/Role/UpdateRole/@item.Id" class="btn btn-outline-success">Rolü Güncelle</a></td>
			</tr>
		}

	</table>
}
else
{
	<div class="alert alert-success">
		<span>Herhangi Bir Rol Bulunamadı.</span>
	</div>
}
<td><a href="/Admin/Role/CreateRole" class="btn btn-outline-primary">Yeni Rol Girişi</a></td>
